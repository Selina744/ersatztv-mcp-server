{
  "name": "ersatztv-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol Server for ErsatzTV - live TV channels from Jellyfin media libraries",
  "private": true,
  "type": "module",
  "bin": {
    "ersatztv-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "axios": "^1.8.4",
    "fast-xml-parser": "^5.3.5"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.0"
  }
}
